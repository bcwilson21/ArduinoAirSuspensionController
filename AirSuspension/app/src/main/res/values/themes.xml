<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AirSuspension" parent="Theme.MaterialComponents.Light">
        <item name="android:colorBackground">@color/dark_theme_bg</item>
        <item name="android:textColor">@color/dark_theme_text</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_theme_fg</item>
        <item name="colorPrimaryVariant">@color/dark_theme_fg</item>
        <item name="colorOnPrimary">@color/dark_theme_text</item> <!-- text color -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_theme_fg</item>
        <item name="colorSecondaryVariant">@color/dark_theme_fg</item>
        <item name="colorOnSecondary">@color/dark_theme_bg</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background of kebab menu -->
        <item name="android:itemBackground">@color/dark_theme_bg</item>
        <item name="android:actionMenuTextColor">@color/dark_theme_bg</item>
    </style>

    <style name="Theme.AirSuspension.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/dark_theme_text</item>
    </style>


    <style name="Theme.AirSuspension.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AirSuspension.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.AirSuspension.AppWidgetContainer" parent="Theme.AirSuspension.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>



</resources>